{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - Administrateur{% endblock %}

{% block page %}

<div class="admin-section justify-content-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mx-auto text-center mb-5">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="mx-auto mb-5 text-uppercase">Administration</h1>
                        <h2 class="text-primary mb-5">Gérez les éléments du site depuis cette page</h2>
                    </div>
                    
                    <div class="col-lg-6 mb-5">
                        <h4 class="text-primary">Comptes utilisateurs</h4>
                        <div class="list-group black-list">
                            <a class="list-group-item list-group-item-action text-white" href="{{ path('admin_user_new') }}">Ajouter un utilisateur</a>
                            <a class="list-group-item list-group-item-action text-white" href="{{ path('admin_users_list') }}">Afficher la liste de tous les utilisateurs</a>
                        </div>
                    </div>

                    <div class="col-lg-6 mb-5  black-list">
                        <h4 class="text-primary">Actualités du club</h4>
                        <div class="list-group">
                            <a class="list-group-item list-group-item-action text-white" href="{{ path('admin_news_new') }}">Ajouter une actualité</a>
                            <a class="list-group-item list-group-item-action text-white" href="{{ path('admin_news_list') }}">Afficher la liste de toutes les actualités</a>
                        </div>
                    </div>

                    <div class="col-lg-6 mb-5  black-list">
                        <h4 class="text-primary">Co-voiturage</h4>
                        <div class="list-group">
                            <a class="list-group-item list-group-item-action text-white" href="{{ path('carsharing_show-all') }}">Afficher la liste de tous les co-voiturage</a>
                        </div>
                    </div>

                    <div class="col-lg-6 mb-5  black-list">
                        <h4 class="text-primary">Galerie</h4>
                        <div class="list-group">
                            <a class="list-group-item list-group-item-action text-white" href="{{ path('gallery_index') }}">Afficher la galerie</a>
                        </div>
                    </div>
                </div>

                <div class="mt-5">
                    <a href="javascript:history.back()">Retour</a>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
