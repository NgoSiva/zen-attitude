{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block page %}

<div class="admin-section justify-content-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mb-5 text-center">

                <h1 class="mx-auto mb-5 text-uppercase">Administration</h1>
                
                <h2 class="text-primary mb-5">Modification de {{ user.name ~ ' ' ~ user.firstname }}</h2>

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                {{ form_widget(form) }}

                <button class="btn btn-primary mt-5">{{ button_label|default('Enregistrer') }}</button>

                {{ form_end(form) }}
                
                <div class="mt-5">
                    <a href="javascript:history.back()">Retour</a>
                </div>
                
            </div>
        </div>
    </div>
</div>

{% endblock %}
