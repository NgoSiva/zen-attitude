{% extends 'base.html.twig' %}

{% block title %}Modification stage{% endblock %}

{% block page %}
<div class="stages-section justify-content-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto text-center">
            
                <h1 class="mx-auto mb-5 text-uppercase">PROFESSEUR</h1>
                <h2 class="text-primary mb-5">Modifier stage interne</h2>
                
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                {{ form_widget(form) }}
                
                <button class="btn btn-primary mt-5">{{ button_label|default('Enregistrer') }}</button>
                
                {{ form_end(form) }}
                
                <div class="mt-5">
                    <a href="{{ path('teacher_index') }}">Retour</a>
                </div>
                
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block modal %}

<!-- Inclusion du modal de confirmation de suppression -->
{% include "_partials/_modal.html.twig" %}

{% endblock %}