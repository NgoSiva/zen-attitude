{% extends 'base.html.twig' %}

{% block title %}Ajout covoiturage{% endblock %}

{% block page %}
<div class="carsharing-section justify-content-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mb-5 text-center">
            
                <h1 class="mx-auto mb-5 text-uppercase">Co-voiturage</h1>
                <h2 class="text-primary mb-5">Proposer un co-voiturage</h2>
                
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                {{ form_widget(form) }}
                
                <button class="btn btn-primary mt-5">{{ button_label|default('Enregistrer') }}</button>
                
                {{ form_end(form) }}
                
                <div class="mt-5">
                    <a href="{{ path('carsharing_index') }}">Retour</a>
                </div>
                
            </div>
        </div>
    </div>
</div>
{% endblock %}